<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cvPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xxxlargePadding"
            android:layout_marginRight="@dimen/xxxlargePadding"
            android:layout_marginTop="@dimen/extraNormalPadding"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="@dimen/smallestPadding">


            <com.testcompany.utils.view.CustomTextView
                android:id="@+id/tvPetient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/extraNormalPadding"
                android:layout_marginLeft="@dimen/extraNormalPadding"
                android:gravity="center"
                android:text="@string/patients"
                android:textAllCaps="true"
                android:textSize="@dimen/extraMediumSize"
                app:custom_font="OpenSans_Bold"/>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cvPastResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="@dimen/xxxlargePadding"
            android:layout_marginRight="@dimen/xxxlargePadding"
            android:layout_marginTop="@dimen/largePadding"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="@dimen/smallestPadding">


            <com.testcompany.utils.view.CustomTextView
                android:id="@+id/tvPastResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/extraNormalPadding"
                android:layout_marginLeft="@dimen/extraNormalPadding"
                android:text="@string/past_rsults"
                android:textAllCaps="true"
                android:textSize="@dimen/extraMediumSize"
                app:custom_font="OpenSans_Bold" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>